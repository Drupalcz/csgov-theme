<div class="top-bar">
  <div class="container">
    {{ page.top_bar }}
  </div>
</div>

<header role="banner">
  <div class="region-header">
    <div class="logo">{{ page.logo }}</div>
  </div>
</header>

<div class="container user-forms">

  {% if page.tabs|render|striptags|trim is not empty %}
    <div class="layout-tabs">
      <div class="layout-contained">
        {{ page.tabs }}
      </div>
    </div>
  {% endif %}

  {{ page.page_title }}

  <main role="main">
    {# Display region only if page is not using layout builder layout.#}
    {% if page.layoutless %}
      {{ page.layoutless }}
    {% endif %}

    {% if page.content_top %}
      <aside class="content-top" role="complementary">
        {{ page.content_top }}
      </aside>
    {% endif %}

    <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
    <div class="layout-content">
      {{ page.content }}
      <div class="back-to-site">
        <a href="/">{{ 'Back to site'|t }}</a>
      </div>
    </div>{# /.layout-content #}
  </main>{# /main #}
</div>{# /.layout-container #}
