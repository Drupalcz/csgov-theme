{{ attach_library('gov_cz/gov-form-input') }}
{{ attach_library('gov_cz/gov-button') }}
{{ attach_library('gov_cz/gov-icon') }}
<div class="search-box-wrapper">
  <form class="search-box" action="/search" method="get" accept-charset="UTF-8" role="search">
    <div class="search-box__inputs">
      <div class="form-item search-box__input">
        {% set label_id = 'search-box_' ~ search_box_form_id|default('form')|clean_unique_id %}
        <label for="{{ label_id }}" {{ search_box_label_visible ? '' : 'class="visually-hidden"' }}>{{ search_box_label|default('Search'|t({}, {'context' : 'CSGOV: Search'})) }}</label>
        <div class="gov-form-input" size="m" variant="primary">
          <input type="text" id="{{ label_id }}" name="keywords" value="" size="30" maxlength="128" class="form-text" {% if search_box_placeholder %} placeholder="{{ search_box_placeholder }}" {% endif %}>
        </div>
      </div>
      <div class="gov-button" variant="primary" type="solid" size="m" hoverable="">
        <button class="element search-box__submit-button" type="submit" value="Submit">
          <span class="search-box__submit-button__label {{ search_box_button_label_visible ? '' : 'visually-hidden' }}">{{ 'Search'|t({}, {'context' : 'CSGOV: Search'}) }}</span>
          <span class="gov-icon" aria-hidden="true">
            <span class="gov-icon__holder">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Pro 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2024 Fonticons, Inc.--><path d="M384 208A176 176 0 1 0 32 208a176 176 0 1 0 352 0zM343.3 366C307 397.2 259.7 416 208 416C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208c0 51.7-18.8 99-50 135.3L507.3 484.7c6.2 6.2 6.2 16.4 0 22.6s-16.4 6.2-22.6 0L343.3 366z"/></svg>
            </span>
          </span>
        </button>
      </div>
    </div>
  </form>
</div>
