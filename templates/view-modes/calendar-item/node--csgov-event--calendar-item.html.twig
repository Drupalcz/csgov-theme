{% set calendar_item_title = label %}
{% set calendar_item_url = url %}
{% if node.field_csgov_date_published.value %}
  {% set calendar_item_date = node.field_csgov_date_published.value %}
{% endif %}
{% if node.field_csgov_date_archived.value %}
  {% set calendar_item_date_archive = content.field_csgov_date_archived %}
{% endif %}
{{ attach_library('csgov_theme/calendar-item-event')}}
{{ attach_library('gov_cz/gov-icon') }}
{% embed('csgov_theme:calendar-item') %}
  {% block calendar_item_meta %}
     {% if node.field_csgov_event_date.value %}
      <div class="calendar-item__date-full">
        <div class="gov-icon" aria-hidden="true">
          <span class="gov-icon__holder">
            <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24">
