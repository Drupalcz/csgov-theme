{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{% if content %}
  <div class="offcanvas__wrapper">
    <div{{attributes.addClass(classes).setAttribute('aria-hidden','true')}}>
      {% if content %}
        <div class="offcanvas__content">
          {{ content }}
        </div>
      {% endif %}
      <div class="offcanvas__search">
        {{ include('csgov_theme:search-box', {
        search_box_label: hero_search_label,
        search_box_label_visible: TRUE,
        search_box_button_label_visible: FALSE,
        search_box_placeholder: hero_search_placeholder,
        search_box_form_id: hero_search_form_id,
        })
      }}
      </div>
    </div>
  </div>
{% endif %}
