{% set classes = [
  'calendar-item'
] %}
{{ attach_library('gov_cz/gov-icon') }}
<div {{ attributes.addClass(classes) }} data-time="{{ calendar_item_date|date('U') }}">
  {{ title_prefix }}
  {{ title_suffix }}
  <div class="calendar-item__date">
    <span class="calendar-item__date__dayname">
      {{ calendar_item_date|date('D')|t }}
    </span>
    <span class="calendar-item__date__day">
      {{ calendar_item_date|date('j')|t }}
    </span>
    <span class="calendar-item__date__month">
      {{ calendar_item_date|date('M')|t }}
    </span>
  </div>
  <div class="calendar-item__content">
    <h3 class="calendar-item__title">
      <a href="{{ calendar_item_url }}">
      {{ calendar_item_title }}
      </a>
    </h3>
    <div class="calendar-item__meta">
    {% block calendar_item_meta %}
      {{ calendar_item_date|t }}
    {% endblock %}
    </div>
    <div class="gov-icon calendar-item__icon" aria-hidden="true">
      <span class="gov-icon__holder">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M6.27036 0.270363C6.63085 -0.090121 7.21531 -0.090121 7.57579 0.270363L18.6527 11.3473C19.0132 11.7078 19.0132 12.2922 18.6527 12.6527L7.57579 23.7296C7.21531 24.0901 6.63085 24.0901 6.27036 23.7296C5.90988 23.3692 5.90988 22.7847 6.27036 22.4242L16.6946 12L6.27036 1.57579C5.90988 1.21531 5.90988 0.630847 6.27036 0.270363Z" fill="currentColor"/>
        </svg>
      </span>
    </div>
  </div>
</div>
