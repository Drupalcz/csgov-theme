{{ attach_library('csgov_theme/paragraphs') }}
{{ attach_library('csgov_theme/gallery') }}

{% set columns_value = paragraph.field_csgov_p_columns.value %}

{%
  set classes = [
    'gallery',
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

<div{{attributes.addClass(classes)}}>
  <div class="gov-container">
    {% if paragraph.field_csgov_p_title.value %}
      <div class="paragraph__heading gallery__heading">
        <h2 class="content__title">{{ content.field_csgov_p_title }}</h2>
      </div>
    {% endif %}

    {% if paragraph.field_csgov_p_content.value %}
      <div class="gov-content paragraph__content">
        {{ content.field_csgov_p_content }}
      </div>
    {% endif %}

    {% if paragraph.field_csgov_p_images.value %}
      <div class="list list-layout--{{ columns_value }}">
        {{ content.field_csgov_p_images }}
      </div>
    {% endif %}
  </div>
</div>
